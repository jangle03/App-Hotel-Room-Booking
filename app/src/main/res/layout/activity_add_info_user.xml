<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activities.AddInfoUserActivity">

    <!-- Chữ BỔ SUNG THÔNG TIN -->
    <TextView
        android:id="@+id/tvAddInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:text="BỔ SUNG THÔNG TIN"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Avatar -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar"
        android:background="@drawable/circle_background"
        app:layout_constraintTop_toBottomOf="@id/tvAddInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="User Avatar" />

    <!-- Scrollable Form Section -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Form Bổ sung thông tin -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Họ và tên -->
            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edttext_background"
                android:drawableStart="@drawable/username"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:hint="Họ và tên"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="#cccccc"
                android:textSize="14sp" />
            <!-- Tên đăng nhập -->
            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edttext_background"
                android:drawableStart="@drawable/username"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:hint="Tên đăng nhập"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="#cccccc"
                android:textSize="14sp"/>
            <!-- Mật khẩu -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp">
                <!-- EditText mật khẩu -->
                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edttext_background"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="12dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="48dp"
                    android:hint="Mật khẩu"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:textColor="#ffffff"
                    android:textColorHint="#cccccc"
                    android:textSize="14sp" />
                <!-- Biểu ẩn hiện password -->
                <ImageView
                    android:id="@+id/ivTogglePassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/hidden_password"
                    android:contentDescription="Toggle password visibility" />
            </FrameLayout>

            <!-- Email -->
            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edttext_background"
                android:drawableStart="@drawable/email"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:hint="Email"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="#cccccc"
                android:textSize="14sp"/>
            <!-- Số điện thoại -->
            <EditText
                android:id="@+id/edtSDT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edttext_background"
                android:drawableStart="@drawable/username"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:hint="Số điện thoại"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="#cccccc"
                android:textSize="14sp"/>
            <!-- Căn cước công dân -->
            <EditText
                android:id="@+id/edtCCCD"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edttext_background"
                android:drawableStart="@drawable/cccd"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:hint="Căn cước công dân"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="#cccccc"
                android:textSize="14sp"/>
            <!-- Địa chỉ -->
            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edttext_background"
                android:drawableStart="@drawable/address"
                android:drawablePadding="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:hint="Địa chỉ"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="#cccccc"
                android:textSize="14sp"/>
            <!-- Button Lưu thay đổi -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/login_btn_background"
                android:text="LƯU THAY ĐỔI"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Hình nền đáy -->
    <ImageView
        android:id="@+id/imgBackgroundBottom"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/back_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>
