<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.admin.adRoom.Component.addRoomType">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#8496FD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập Thông tin loại Phòng"/>
        <TextView
            android:layout_marginTop="60dp"
            android:textSize="18sp"
            android:textColor="#165F80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập Thông tin loại Phòng"/>
        <EditText
            android:hint="Nhập tên"
            android:id="@+id/ad_rt_ten"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="#165F80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập Thông tin giá"/>
        <EditText
            android:hint="Nhập giá"
            android:inputType="number"
            android:id="@+id/ad_rt_gia"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="18sp"
                android:textColor="#165F80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập số lượng người tối đa"
                android:layout_weight="1"/>
            <EditText
                android:hint="Nhập giá"
                android:inputType="number"
                android:id="@+id/ad_rt_sl"
                android:layout_width="150dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="#165F80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập Thông tin Mô tả"/>
        <EditText
            android:id="@+id/ad_rt_mt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập văn bản mô tả..."
            android:inputType="textMultiLine"
            android:lines="5"
            android:gravity="top|start"
            android:scrollbars="vertical"/>

        <Button
            android:layout_marginTop="40dp"
            android:text="Lưu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rt_ad_btn"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>