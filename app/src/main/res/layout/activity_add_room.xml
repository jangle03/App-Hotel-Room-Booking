<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.admin.adRoom.Component.AddRoom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#B57CBF"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="hãy nhập thông tin phòng"/>
        <ImageView
            android:layout_marginTop="50dp"
            android:background="@drawable/border_shadow"
            android:src="@drawable/ad_anh_clone_phong"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/ad_r_img"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="18sp"
                android:textColor="#7452AF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vị trí phòng"
                android:layout_weight="1"/>
            <EditText
                android:hint="Nhập vị trí phòng"
                android:inputType="number"
                android:id="@+id/ad_r_viTri"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="18sp"
                android:textColor="#7452AF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn Loại Phòng"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/ad_r_sp"
                android:layout_width="150dp"
                android:layout_height="50dp"/>
        </LinearLayout>

        <Button
            android:text="Lưu"
            android:layout_marginTop="60dp"
            android:id="@+id/ad_r_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>